{
    "name": "therichcourt/translations-testing-bundle",
    "description": "A simple way to test translations in your Symfony application",
    "type": "library",
    "authors": [
        {
            "name": "Rich Court",
            "email": "therichcourt@gmail.com"
        }
    ],
    "license": "MIT",
    "autoload": {
        "psr-4": { "TheRichCourt\\TranslationsTestingBundle\\": "src/" }
    },
    "autoload-dev": {
        "psr-4": { "Tests\\TheRichCourt\\TranslationsTestingBundle\\": "tests/" }
    },
    "require": {
        "symfony/framework-bundle": "^4.4|^5.0|^6.0|^7.0",
        "twig/intl-extra": "^3.0"
    },
    "require-dev": {
        "php": "^7.0|~8.0|~8.1|~8.2|~8.3",
        "phpstan/phpstan": "^1.0",
        "phpstan/extension-installer": "^1.0",
        "phpstan/phpstan-deprecation-rules": "^1.0",
        "squizlabs/php_codesniffer": "^3.5",
        "symfony/phpunit-bridge": "^5.1|^6.0|^7.0",
        "matthiasnoback/symfony-config-test": "^4.2",
        "symfony/yaml": "^5.1|^6.0|^7.0",
        "symfony/browser-kit": "^5.1|^6.0|^7.0",
        "symfony/routing": "^5.1|^6.0|^7.0",
        "symfony/translation": "^5.1|^6.0|^7.0",
        "symfony/twig-bundle": "^5.1|^6.0|^7.0"
    },
    "scripts": {
        "test": [
            "XDEBUG_MODE=coverage vendor/bin/simple-phpunit -c phpunit.xml --color=always --coverage-text",
            "vendor/bin/phpstan analyse src --level=8 --ansi",
            "vendor/bin/phpcs --standard=PSR12 src --colors -p"
        ]
    },
    "config": {
        "allow-plugins": {
            "phpstan/extension-installer": true
        }
    }
}
